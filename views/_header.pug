
header.main_header_arae
  //  Top Bar 
  .topbar-area
    .container
      .row.align-items-center
        .col-lg-6.col-md-6.


        .col-lg-6.col-md-6
          ul.topbar-others-options
            li
              a(href='/') Accueil
            li
              a(href='/search')=`${__('Search a destination')}`
            li
              a(href='#') Login
            li
              a(href='#') Sign up
            li
              .dropdown.language-option
                button.dropdown-toggle(type='button' data-bs-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                  span.lang-name
                .dropdown-menu.language-dropdown-menu
                  a.dropdown-item(href='/?lang=en-us') English ($)
                  a.dropdown-item(href='/?lang=en-gb') English (€)
                  a.dropdown-item(href='/?lang=es') Spanish (€)
                  a.dropdown-item(href='/?lang=fr') French (€)
            
  //  Navbar Bar 
  .navbar-area
    .main-responsive-nav
      .container
        .main-responsive-menu
          .logo
            a(href='/')
              img(src='assets/img/poulpe.png' alt='logo')
    .main-navbar
      .container
        nav.navbar.navbar-expand-md.navbar-light
          a.navbar-brand(href='/')
            img(src='assets/img/poulpe.png' alt='logo')
          .collapse.navbar-collapse.mean-menu#navbarSupportedContent
            ul.navbar-nav
              li.nav-item
                a.nav-link(href='/') Chercher un vol
              li.nav-item
                a.nav-link(href='#').

                  Destinations

                ul.dropdown-menu
                  li.nav-item
                    a.nav-link(href='#') Les moins chères
                  li.nav-item
                    a.nav-link(href='#') Se retrouver
            .others-options.d-flex.align-items-center
              .option-item
                a.search-box(href='#')
                  i.bi.bi-search
