                .tab-pane.fade.show.active#multi_city(role='tabpanel' aria-labelledby='multi_city-tab')
                  .row
                    .col-lg-12
                      .oneway_search_form
                        form(action='/common', method='post', autocomplete='off')
                          .multi_city_form_wrapper
                            .multi_city_form
                              .row
                                .col-lg-6.col-md-6.col-sm-12.col-12
                                  .form_search_date
                                    .flight_Search_boxed.date_flex_area
                                      .Journey_date
                                        p Aller
                                        input(type='date',required,name='departureDate',value='2022-12-16')
                                        span TODO? Jeudi
                                      .Journey_date
                                        p Retour
                                        input(type='date',required,name='returnDate',value='2022-12-18')
                                        span TODO? Samedi                            
                            each i in [0,1]
                              .multi_city_form(data-origins-index=`${i}`)
                                - var firstRow = (i === 0)
                                if !firstRow
                                  .col-lg-12
                                    .multi_form_remove
                                      button(type='button' id="remove_multi_city") Enlever ce point de départ
                                .row
                                  .col-lg-6.col-md-6.col-sm-12.col-12
                                    .flight_Search_boxed.autocomplete
                                      p De
                                      //- input(type='text',required,name='origins[][flyFrom]',value=`${flyFrom}`,maxlength=3)
                                      input(type='text',required,name='origins[][flyFrom]',placeholder='Choisissez un aéroport de départ...',maxlength=10)
                                      span
                                      .plan_icon_posation
                                        i.fas.fa-plane-departure
                                  .col-lg-6.col-md-6.col-sm-12.col-12
                                    .flight_Search_boxed.dropdown_passenger_area
