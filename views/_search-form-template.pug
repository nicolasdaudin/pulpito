                                            .passengers
                                              h6 Passagers
                                              .passengers-types
                                                .passengers-type
                                                  .text
                                                    input.count.pcount(type='number',readonly,required,name='origins[][adults]',value=1) 
                                                    .type-label
                                                      p Adultes
                                                      span 12+ ans
